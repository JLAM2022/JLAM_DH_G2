<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head.ejs')%>
	<title>Catálogo - Terra Rossa</title>
</head>

<body>
  <header>
    <%- include('../partials/nav.ejs')%>
  </header>
  <% 
  const formatter = new Intl.NumberFormat("es-AR", { 
    style: "decimal",
    minimumFractionDigits: 2,
  }); 
  %>
  <section class="catalogo">
    <div class="catalogo__headertitle">
     <h1 class="catalogo__title"><strong>Catálogo</strong></h1>
    </div>
    <div class="catalogo__queries">
      <div class="container__filtro">
        <div class="container__filtro_title" id="filter"><h2>FILTROS</h2><i class="fa-solid fa-list"></i></div>        
    <div id="show">
      <ul class="filter-ul">
        <li><p>Precio</p></li>
        <div class="li-flex">
        <li class="li-not num">
            <input type="range" id="precio" min="5000" max="20000" step="5000" value="5000" list="tickmarks">
            <output id="outvol" name="outvol" for="vol">Hasta 5.000</output> 
        <datalist id="data">
          <option value="5000" class="value">
          <option value="10000" class="value">
          <option value="15000" class="value">
          <option value="20000" class="value">
        </datalist>
          
        </li>
        <!-- <li class="li-not num"><input type="number" placeholder="Hasta" min="7000" max="30000" step="1000"></li>   -->
        <!-- <li class="li-not submit"><button type="submit">Buscar</button></li> -->
      </div>
      </ul>
      <ul class="filter-ul" id="pri">
          <li class="li-not"><input type="checkbox" id="tintos" name="tintos" value="tintos"><p>Tintos</p></li>  
         <li class="li-not"><input type="checkbox" id="blancos" name="blancos" value="blancos"><p>Blancos</p></li>  
          <li class="li-not"><input type="checkbox" id="especiales" name="especiales" value="especiales"><p>Especiales</p></li>  
          <li class="li-not"><input type="checkbox" id="espumantes" name="espumantes" value="espumantes"><p>Espumantes</p></li> 
          <!-- <li class="li-not submit"><button >Buscar</button></li> -->
      </ul>
      <ul class="filter-ul">
        <li><p>Variedad</p></li>
        <div class="">
          <li class="li-not"><input type="checkbox" id="malbec" name="variedad" value="malbec"><p>Malbec</p></li>  
          <li class="li-not"><input type="checkbox" id="merlot" name="variedad" value="merlot"><p>Merlot</p></li>  
          <li class="li-not"><input type="checkbox" id="pinotNoir" name="variedad" value="pinotNoir"><p>Pinot Noir</p></li>  
          <li class="li-not"><input type="checkbox" id="cabernetSauvignon" name="variedad" value="cabernetSauvignon"><p>Cabernet Sauvignon</p></li>  
          <li class="li-not"><input type="checkbox" id="syrah" name="variedad" value="syrah"><p>Syrah</p></li> 
          <li class="li-not"><input type="checkbox" id="tempranillo" name="variedad" value="tempranillo"><p>Tempranillo</p></li>
          <li class="li-not"><input type="checkbox" id="chardonnay" name="variedad" value="chardonnay"><p>Chardonnay<p></li>
 

          <li class="li-not submit"><button>Buscar</button></li>
      </div>
      </ul>
    </div>
      </div>

      <div class="catalogo__conteiner">
        <% productos.forEach(producto => { %>
              <article class="cata__products">
          <img class="cataimg__product" src="/img/productImg/<%= producto.productImg%>" alt="aqui va la foto">
          <p class="cataname__product"> <%= producto.productName %></p>
          <p class="cataprecio__product">$ <%= formatter.format(producto.productPrice)%></p>
          
          <form action="/product/product-cart/<%= producto.idProduct%>" method="post">
              <div class="container__buttons">
                <button type="submit" class="add-to-cart"><i class="fa-solid fa-cart-shopping"></i></button>
                <a class="cata__eye" href="/product/product-detail/<%= producto.idProduct%>" target=""><i class="fa-regular fa-eye"></i></a>
              </div>
            </form>
        </article>
       <% })   %> 
        

      </div>
    </div>

  </section>
  <footer class="footer">
    <%- include('../partials/footer.ejs')%>
  </footer>

  <script src="/js/filtroCatalogo.js">
  </script>

</body>

</html>